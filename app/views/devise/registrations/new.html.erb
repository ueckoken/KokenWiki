<h1 class="h3 text-center">新規登録</h1>

<div class="mx-auto" style="max-width: 480px">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "Eメール" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" ""%>
  </div> 
  <div class="form-group">
    <%= f.label "ユーザーID" %>
    <%= f.text_field :user_id, autocomplete: "user_id", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
      <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード(確認のためもう一度)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <%= f.submit "登録", class: "btn btn-primary btn-block"%>
<% end %>

<hr>
or
<%= render "devise/shared/links" %>

</div>