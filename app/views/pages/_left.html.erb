            <% if @page.parent %>
            <li>
                <% if @page.parent.root? %>
                    <%= link_to "/", "/" %>
                <% else %>
                    <%= link_to @page.parent.title, "../" %>
                <% end %>
            <ul>
            <% end %>
                <li>
                    <strong>
                        <% if @page.root? %>
                            <%= link_to "/", "/" %>
                        <% else %>
                            <%= link_to @page.title, "." %>
                        <% end %>
                    </strong>
                    <ul>
                        <% @children_pages.each do |child| %>
                            <li>
                                <%= link_to child.title, child.title %>
