<%= render "settings/layout" do %>
    <h1><%= @usergroup.name %></h1>
    <div class="btn-toolbar justify-content-between">
        <div class="btn-group">
            <%= link_to "編集", edit_usergroup_path(@usergroup), :class => "btn btn-default" %>
        </div>
        <div class="btn-group">
            <%= button_to "削除", {:action => "destroy"}, :class => "btn btn-danger", :method => :delete %>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td>名前</td>
                <td>ユーザーID</td>
            </tr>
        </thead>
        <% @usergroup.users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.user_id %></td>
            </tr>
        <% end %>
    </table>
<% end %>